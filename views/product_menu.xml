<odoo>
    <!-- Acción para mostrar la vista de productos -->
    <record id="action_product_template_form" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="product.product_template_only_form_view" />
    </record>
    <!-- Menú principal -->
    <menuitem id="menu_product_root" name="Product Integration" sequence="1" />

    <!-- Submenú para productos -->
    <menuitem id="menu_product_template" name="Products" parent="menu_product_root"
        action="action_product_template_form" sequence="10" />
</odoo>